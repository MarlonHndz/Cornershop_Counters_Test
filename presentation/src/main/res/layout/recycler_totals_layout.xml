<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/totals_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/txt_total_counters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal_2"
            android:ellipsize="middle"
            android:gravity="center"
            android:maxWidth="@dimen/total_counters_max_width"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal_size"
            android:textStyle="bold"
            tools:text="4 items" />

        <TextView
            android:id="@+id/txt_total_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small_1"
            android:ellipsize="middle"
            android:gravity="center"
            android:maxWidth="@dimen/total_counters_max_width"
            android:maxLines="1"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_normal_size"
            android:textStyle="bold"
            tools:text="17 times" />

    </LinearLayout>
</layout>
